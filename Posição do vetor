#include <stdio.h>

int main() {
     int a[10],i;
 // Entrada
    for (i = 0; i <10; i++){
    printf("Digite um valor da posição %d: ",i+1); 
    scanf ("%d", &a[i]);
    }
    
 // Saída
    printf ("\nOs valores pares são");
    for (i = 0; i < 10; i--){
        if (a[i]%2 == 0){
    printf ("\n%d ", a[i] );
        }
    }
     return 0; }



